mixin banner(imagen)
  div(class="carousel-item"): img(src="images/" + imagen class="d-block w-100")

mixin team(titulo, imagen)
  div(class="col col-md-4")
    div(class="card")
      div(class="card-header text-center") #{titulo}
      div(class="card-body")
        div(class="container img-container")
          img(src="/images/" + imagen)
        div(class="container mt-5")
          p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quam, 
          | officia, temporibus pariatur sint ab ad quas vel laudantium consequuntur error, 
          | quo accusamus voluptas minus consectetur libero in ut sit 
          | atque

mixin card_dog(subrace, img)
  div(class="card text-center")
    div(class="card-header")
      h2= race
    div(class="card-body d-flex  flex-column align-items-center")
      h5(class="card-title mb-5") Un #{race} luce así:
      div(class="container-img "): img(src=img class="animated animatedFadeInUp fadeInUp")
      a(class="btn btn-primary my-5" href="/perros") Regresar

mixin dog_list(dogs)
  div(class="container container-list")
  div(class="row mt-5 animated animatedFadeInUp fadeInUp")
    if dogs
      h2(class="mb-5") Listado de razas
      ul
        each dog in dogs
          li(class="mt-2")
            a(class="dog-url" href='/perro/' + dog)= dog
    else
      h2(class="text-center bg-warning p-2") Estamos experimentando problemas internos. Recarga la página o regresa más tarde.
      div(class="container-img"): img(src="images/what.png")
